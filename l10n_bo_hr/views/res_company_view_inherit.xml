<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--PapeletaPAgo Form -->
        <record model="ir.ui.view" id="company_view_form_inherit_papeletapago">
            <field name="name">company.view.form.inherit.papeletapago</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page" position="after">
                    <page string="Recursos Humanos">
                        <group>
                            <field name="cod_empleador"/>
                            <field name="caja_salud"/>
                            <field name="recargo_noc"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
